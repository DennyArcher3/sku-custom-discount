{
  "name": "sku-custom-discount",
  "private": true,
  "scripts": {
    "build": "remix vite:build",
    "build:remix": "remix vite:build",
    "build:remix:cf": "remix vite:build --config vite.config.cloudflare.ts",
    "build:cf": "node build-worker.js",
    "dev": "shopify app dev",
    "dev:cf": "wrangler dev",
    "dev:staging": "wrangler dev --env staging",
    "deploy:staging": "npm run build:cf && wrangler deploy --env staging",
    "deploy:production": "npm run build:cf && wrangler deploy --env production",
    "logs:staging": "wrangler tail --env staging",
    "logs:production": "wrangler tail --env production",
    "db:create:staging": "wrangler d1 create sku-discount-db-staging",
    "kv:create:staging": "wrangler kv:namespace create SESSIONS --env staging",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "deploy:shopify:production": "shopify app deploy --config shopify.app.production.toml",
    "deploy:shopify:staging": "shopify app deploy --config shopify.app.staging.toml",
    "deploy:all:staging": "npm run deploy:staging && npm run deploy:shopify:staging",
    "deploy:all:production": "npm run deploy:production && npm run deploy:shopify:production",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "start": "remix-serve ./build/server/index.js",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "graphql-codegen": "graphql-codegen",
    "vite": "vite"
  },
  "type": "module",
  "engines": {
    "node": "^18.20 || ^20.10 || >=21.0.0"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20250726.0",
    "@remix-run/cloudflare": "^2.17.0",
    "@remix-run/dev": "^2.16.1",
    "@remix-run/fs-routes": "^2.16.1",
    "@remix-run/react": "^2.16.1",
    "@shopify/app-bridge-react": "^4.1.6",
    "@shopify/polaris": "^12.0.0",
    "@shopify/shopify-app-remix": "^3.7.0",
    "@shopify/shopify-app-session-storage-kv": "^4.0.20",
    "isbot": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "devDependencies": {
    "@remix-run/route-config": "^2.16.1",
    "@shopify/api-codegen-preset": "^1.1.1",
    "@shopify/app-bridge-ui-types": "^0.2.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.2.0",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.2.4",
    "typescript": "^5.2.2",
    "vite": "^6.2.2"
  },
  "workspaces": [
    "extensions/*"
  ],
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "resolutions": {
    "@graphql-tools/url-loader": "8.0.16",
    "@graphql-codegen/client-preset": "4.7.0",
    "@graphql-codegen/typescript-operations": "4.5.0",
    "minimatch": "9.0.5",
    "vite": "^6.2.2"
  },
  "overrides": {
    "@graphql-tools/url-loader": "8.0.16",
    "@graphql-codegen/client-preset": "4.7.0",
    "@graphql-codegen/typescript-operations": "4.5.0",
    "minimatch": "9.0.5",
    "vite": "^6.2.2"
  },
  "author": "erhanguclu"
}
